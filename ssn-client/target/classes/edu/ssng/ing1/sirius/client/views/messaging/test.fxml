<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<Pane xmlns:fx="http://javafx.com/fxml/1" fx:id="messageBubble" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #F4F4F5; -fx-background-radius: 15; -fx-border-radius: 15;">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <HBox fx:id="messageContentBox" spacing="10.0" alignment="TOP_LEFT">
    <StackPane>
      <ImageView fx:id="messageImage" fitWidth="50.0" fitHeight="50.0" pickOnFill="false" visible="false" />
      <Text fx:id="messageText" fill="#333333" wrappingWidth="160.0">
        This is a message bubble
      </Text>
    </StackPane>
    <HBox alignment="TOP_CENTER">
      <Text fx:id="senderName" fill="#666666" fontSize="12.0" />
      <Text fx:id="messageTimestamp" fill="#999999" fontSize="10.0" />
    </HBox>
  </HBox>
  <Polygon fx:id="messageTail" fill="#F4F4F5" layoutX="185.0" layoutY="20.0" points="0,0 10,0 0,10" />
</Pane>
